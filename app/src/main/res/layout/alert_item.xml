<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:backgroundTint="@color/light_grayish_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/nameAlertTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textSize="26sp"/>

        <TextView
            android:id="@+id/emailAlertTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/super_light_grayish_blue"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timeAlertTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"/>

            <TextView
                android:id="@+id/tagAlertTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Etiqueta descriptiva"
                android:textColor="@color/white"
                android:textSize="20sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/weeklyLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:visibility="visible">
                <TextView
                    android:id="@+id/lunes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/super_light_grayish_blue"
                    android:textSize="30sp"
                    android:text="L"/>
                <View
                    android:layout_width="12dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/martes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/super_light_grayish_blue"
                    android:textSize="30sp"
                    android:text="M"/>
                <View
                    android:layout_width="12dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/miercoles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/super_light_grayish_blue"
                    android:textSize="30sp"
                    android:text="X"/>
                <View
                    android:layout_width="12dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/jueves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/super_light_grayish_blue"
                    android:textSize="30sp"
                    android:text="J"/>
                <View
                    android:layout_width="12dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/viernes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/super_light_grayish_blue"
                    android:textSize="30sp"
                    android:text="V"/>
                <View
                    android:layout_width="12dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/sabado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/super_light_grayish_blue"
                    android:textSize="30sp"
                    android:text="S"/>
                <View
                    android:layout_width="12dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/domingo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/super_light_grayish_blue"
                    android:textSize="30sp"
                    android:text="D"/>
            </LinearLayout>

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:text="00/00/0000"
                android:visibility="visible"/>

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/removeAlertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_margin="10dp"
        android:clickable="true"
        android:drawableStart="@drawable/ic_delete"
        android:drawableTint="@color/dark_red" />

</androidx.cardview.widget.CardView>